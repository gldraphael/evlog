@page "/events/{slug}"
@model ViewEventModel
@{
    var post = Model.Post;
}

<h1>@post.Title</h1>
@if(post.IsSingleDayEvent)
{
    <p>
        On @post.StartDateTime.ToString("dd MMM, yy") 
        from @post.StartDateTime.ToString("hh:mm tt") onwards
    </p>
}
else
{

}

<p>@post.Description</p>
<p>@post.Body</p>

@if(post.Announcements?.Any() ?? false)
{
    <h3>Announcements</h3>
    foreach(var announcement in post.Announcements)
    {
            <p>
                <strong>@announcement.Text</strong><br />
                @announcement.LongText
            </p>
    }
}

<button>Register</button>