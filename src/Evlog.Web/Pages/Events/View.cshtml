@page "/events/{slug}"
@model ViewEventModel
@{
    var post = Model.Post;
}

<h1>@post.Title</h1>
@if(post.IsSingleDayEvent)
{
    <p>
        On @post.StartTimeUtc.ToString("dd MMM, yy")
        from @post.StartTimeUtc.ToString("hh:mm tt") onwards
    </p>
}
else
{

}

<p>@post.Description</p>
<p>@post.Body</p>


<div>
    <form method="post">
        <input asp-for="RegisterVM.Email"
            type="email" placeholder="jane.doe@example.com" />
        <button type="submit">Register</button>
    </form>
</div>
